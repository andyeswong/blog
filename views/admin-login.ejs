<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login | AWONG_blog</title>
  <meta name="robots" content="noindex, nofollow">

  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="font-mono overflow-x-hidden min-h-screen flex items-center justify-center" style="background-color: var(--body-bg); color: var(--fg);">

  <div class="w-full max-w-md px-4">
    <!-- Login Card -->
    <div class="backdrop-blur-sm border rounded-lg p-8" style="background-color: rgba(40, 42, 54, 0.4); border-color: var(--border-color);">

      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-light tracking-tight mb-2" style="color: var(--cyan)">
          admin_panel
        </h1>
        <div class="w-16 h-px mx-auto" style="background: linear-gradient(to right, var(--cyan), transparent)"></div>
        <p class="mt-4 text-sm font-light" style="color: var(--comment)">
          Ingresa tu contraseña para continuar
        </p>
      </div>

      <!-- Error Message -->
      <% if (error) { %>
        <div class="mb-6 p-4 rounded-lg text-center" style="background-color: rgba(255, 85, 85, 0.1); border: 1px solid var(--red)">
          <p class="font-mono font-light text-sm" style="color: var(--red)">
            <%= error %>
          </p>
        </div>
      <% } %>

      <!-- Login Form -->
      <form action="/admin/login" method="POST">
        <div class="mb-6">
          <label for="password" class="block mb-2 text-sm font-light" style="color: var(--purple)">
            Password
          </label>
          <input
            type="password"
            id="password"
            name="password"
            required
            autofocus
            class="w-full px-4 py-3 rounded-lg font-mono font-light text-sm transition-all duration-300 focus:outline-none"
            style="background-color: var(--current-line); color: var(--fg); border: 1px solid var(--border-color); caret-color: var(--cyan);"
            placeholder="••••••••••••"
          />
        </div>

        <button
          type="submit"
          class="w-full px-6 py-3 rounded-lg font-mono font-light tracking-wide transition-all duration-300 hover:opacity-80"
          style="background-color: var(--cyan); color: var(--bg);"
        >
          Ingresar →
        </button>
      </form>

      <!-- Back to Blog -->
      <div class="mt-6 text-center">
        <a
          href="/"
          class="text-sm font-light transition-colors duration-300"
          style="color: var(--comment);"
          onmouseover="this.style.color='var(--purple)'"
          onmouseout="this.style.color='var(--comment)'"
        >
          ← Volver al blog
        </a>
      </div>
    </div>

    <!-- Footer Info -->
    <div class="mt-8 text-center">
      <p class="text-xs font-light" style="color: var(--comment); opacity: 0.5;">
        AWONG_blog Admin Panel
      </p>
    </div>
  </div>

  <script src="/theme.js"></script>
</body>
</html>
